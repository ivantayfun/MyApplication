<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/zagryzkaspiskaslovarey_item"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:clickable="true"
    android:orientation="horizontal"
    android:textColor="@color/color5"
    android:background="@color/color1"
    android:focusable="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/zagryzkaspiskaslovarey_licheck"
        android:orientation="horizontal"
        android:gravity="start"
        >

        <TextView
            android:id="@+id/text_zagryzkaspiskaslovarey_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:clickable="false"
            android:gravity="start|center"
            android:selectAllOnFocus="false"
            android:text="@string/my_text1"
            android:textColor="@color/color5"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zagryzkaspiskaslovarey_licheck"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_zagryzkaspiskaslovarey_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:shadowColor="@color/color5"
            android:textColor="@color/color5"
            android:textColorLink="@color/color3" />
    </LinearLayout>

</RelativeLayout>